{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.2",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["analyzers/base.js", "analyzers/facebook.js", "content.js"]
    }
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  }
}